@using CarPark.Web.Business.Common
@using CarPark.Web.Controllers
@model CarPark.Web.Models.LocationMove.AddViewModel

@{
    ViewData["Title"] = "Location Move Edit";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong> Location Move Edit </strong>
            </div>
            <div class="card-body">

                @using (Html.BeginForm("Edit", "LocationMove", FormMethod.Post, new { @class = "form-horizontal input-sm" }))
                {
                    @Html.HiddenFor(m => m.Id)
                    @Html.HiddenFor(m => m.CarId)
                    @Html.HiddenFor(m => m.LocationId)
                   

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Location</label>
                        <div class="col-md-9">
                            @Model.Location_Name
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <button class="btn btn-sm btn-primary" type="submit" id="btnSubmit" name="SubmitType" value="Edit">
                                <i class="fa fa-dot-circle-o"></i>RELEASE
                            </button>

                            &nbsp;
                            <a class="btn btn-sm btn-danger" href="~/LocationMove/List">
                                <i class="fa fa-ban"></i> Cancel
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">

                            @if (ViewBag.ErrorMessage != null && !string.IsNullOrEmpty(ViewBag.ErrorMessage))
                            {
                                <div class="text-danger">
                                    @ViewBag.ErrorMessage
                                </div>
                            }
                            @if (ViewBag.ErrorMessageList != null)
                            {
                                <div class="text-danger">
                                    @foreach (var item in ViewBag.ErrorMessageList)
                                    {
                                        <span>@item</span>
                                        <br />
                                    }
                                </div>
                            }

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- /.col-->
</div>
